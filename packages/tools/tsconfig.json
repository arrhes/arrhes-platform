{
    "extends": "../../tsconfig.json",
    "compilerOptions": {
        "verbatimModuleSyntax": false,
        "rootDir": "./src",
        "outDir": "./build",
        "paths": {
            "#/*": [
                "./src/*"
            ]
        }
    },
    "exclude": [
        "./node_modules",
        "./build",
    ],
    "include": [
        "./src"
    ]
}