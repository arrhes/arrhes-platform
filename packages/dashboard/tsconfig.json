{
    "compilerOptions": {
        "jsx": "react-jsx",
        "target": "ESNext",
        "noImplicitAny": true,
        "skipLibCheck": true,
        "strict": true,
        "strictNullChecks": true,
        "forceConsistentCasingInFileNames": true,
        "esModuleInterop": true,
        "module": "NodeNext",
        "moduleResolution": "NodeNext",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "sourceMap": true,
        "rootDir": "./src",
        "outDir": "./build",
        "paths": {
            "#/*": [
                "./src/*"
            ]
        },
        "declaration": false,
        "declarationMap": false,
    },
    "exclude": [
        "./node_modules",
        "./build",
    ],
    "include": [
        "./src"
    ]
}