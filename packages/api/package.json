{
    "name": "@arrhes/application-api",
    "type": "module",
    "private": false,
    "scripts": {
        "dev": "tsx watch --env-file=.env ./src/server.ts",
        "build": "tsc --build",
        "start": "node --env-file=.env ./build/server.js",
        "test": "vitest run",
        "test:watch": "vitest",
        "test:unit": "vitest run ../../tests/api/unit",
        "test:integration": "vitest run ../../tests/api/integration"
    },
    "devDependencies": {
        "@types/node": "24.10.1",
        "@types/nodemailer": "7.0.4",
        "tsx": "4.20.6",
        "typescript": "5.9.3",
        "vitest": "^4.0.18"
    },
    "dependencies": {
        "@arrhes/application-metadata": "workspace:*",
        "@aws-sdk/client-s3": "3.940.0",
        "@aws-sdk/s3-request-presigner": "3.940.0",
        "@mollie/api-client": "4.4.0",
        "drizzle-orm": "0.44.7",
        "hono": "4.10.7",
        "nodemailer": "7.0.11",
        "postgres": "3.4.7",
        "puppeteer": "24.31.0",
        "valibot": "1.2.0"
    }
}